pipeline {
    agent { label 'jdk8' }    
    stages {
        stage('SourceCode') {
            steps {
                git branch: 'main', url: 'https://github.com/sainath335/js-e2e-express-server.git'
            }
        }
        stage('install npm') {
            steps {
                sh 'npm install'               
            }
        }
         stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
         stage('Test results') {
            steps {
                sh 'npm test'
            }
        }
        stage('Code Analysis') {
            steps {
                sh 'npm run sonar'
            }
        }
    }
}